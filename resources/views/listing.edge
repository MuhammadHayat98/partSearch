<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <title>search results</title>
        {{ style('style') }}
    </head>
    <body>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="/search">
                <strong>Part Searcher</strong>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                    <a class="nav-link" href="/about">about
                        <span class="sr-only">(current)</span>
                    </a>
                    </li>
                </ul>
                <form class="form-inline">
                    <div class="md-form my-0">
                    <a class="nav-link log" href="/login">Log Out
                        <span class="sr-only">(current)</span>
                        </a>                  
                    </div>
                </form>
                </div>
            </div>
        </nav>
 
      <!-- Page Content -->
        <div class="container">
            <div class="card border-0 shadow my-5">
                <div class="card-body p-5">
                    <div class="thumbnail"></div>
                    <div class= "price"></div>
                    <h1 class="font-weight-light">Search results</h1>
                    <div class="row">
                        @each(item in items)
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="{{item.thumbnail}}" alt="Card image cap">
                            <div class="card-body">
                            <h5 class="card-title">{{item.title}}</h5>
                                <p class="card-text">{{item.source}}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                            <li class="list-group-item">Price: {{item.price}}</li>
                                
                            </ul>
                            <div class="card-body">
                                <a href="{{item.link}}" class="card-link">see in store</a>
                                <a href="#" class="card-link">Save Item</a>
                            </div>
                        </div>
                        @endeach
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="./js/jquery.min.js"></script>
        <script type="text/javascript" src="./js/scripts.js"></script>
    </body>
</html>